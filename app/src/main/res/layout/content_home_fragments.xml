<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <!--    &lt;!&ndash; Adding bottom sheet after main content &ndash;&gt;-->
    <include layout="@layout/content_frag_passanger"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginRight="4dp"
        android:layout_marginLeft="4dp"
        android:id="@+id/content_frag_passanger"
        android:visibility="gone"
        android:layout_marginBottom="64dp"
        android:layout_gravity="bottom|center">

    </include>


    <FrameLayout
        android:layout_width="wrap_content"
        android:id="@+id/frame_note_board"
        android:layout_height="wrap_content">

    </FrameLayout>
    <!--    &lt;!&ndash; Adding bottom sheet after main content &ndash;&gt;-->
    <include layout="@layout/content_frag_delivery"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginRight="4dp"
        android:layout_marginLeft="4dp"
        android:id="@+id/content_frag_delivery"
        android:visibility="gone"
        android:layout_marginBottom="64dp"
        android:layout_gravity="bottom|center">

    </include>

</LinearLayout>